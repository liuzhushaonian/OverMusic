<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/colorGrey"
    >



    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_music_note_black_24dp"
        android:scaleType="center"
        android:background="@color/colorCyan"
        android:id="@+id/small_notification_album_book"
        />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/default_space"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/music"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/small_notification_song"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/artist"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/small_notification_info"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >


        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_fast_rewind_black_24dp"
            android:id="@+id/small_notification_previous"
            android:scaleType="center"
            style="@style/Buttom"
            />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:id="@+id/small_notification_play"
            android:scaleType="center"
            style="@style/Buttom"
            />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_fast_forward_black_24dp"
            android:scaleType="center"
            android:id="@+id/small_notification_next"
            style="@style/Buttom"
            />




    </LinearLayout>


</LinearLayout>